<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/txtCreateNewList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="@string/create_new_list"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:layout_marginTop="20dp"
        android:id="@+id/txtNewListName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10">
    </EditText>

    <Button
        android:id="@+id/btnNewListOk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ok" 
        android:background="@drawable/button_drawale"
        android:textColor="@color/darktheme_white"
        android:height="40dp"
        android:textSize="16dp"
        android:layout_marginTop="20dp"/>

</LinearLayout>